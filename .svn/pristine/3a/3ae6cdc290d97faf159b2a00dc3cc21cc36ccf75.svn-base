<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>登录</title>
</head>
<body>
    <form id="loginFm">
        <div style="padding:0 20px; margin-top:30px;">
            <div>
                <input name="UserName" class="easyui-textbox" data-options="prompt:'用户名',iconCls:'icon-man',required:true" style="width:100%;height:38px">
            </div>
            <div class="mt10">
                <input name="Psw" class="easyui-textbox" type="password" data-options="prompt:'请输入密码',iconCls:'icon-lock',required:true,validType:'psw'" style="width:100%;height:38px">
            </div>
            <!--<div class="mt10">
                <input name="ValidCode" class="easyui-textbox" data-options="prompt:'验证码',required:true,validType:'validCode'" style="width:30%;height:38px">
                <img id="imgLoginCode" />
            </div>-->
            <div style="text-align:center;margin-top:30px">
                <a name="abtnLogin" class="easyui-linkbutton" style="width:100%;height:40px"><span style="font-size:16px">登 录</span></a>
            </div>
            <div style="text-align:center;margin-top:30px;display:none;">
                <a name="abtnToRegister" class="easyui-linkbutton" plain="true" outline="true" style="width:100px;height:35px"><span style="font-size:16px">注 册</span></a>
            </div>
        </div>
    </form>

    <script>
        $(function () {
            Login.Init();
        })
    </script>
</body>
</html>
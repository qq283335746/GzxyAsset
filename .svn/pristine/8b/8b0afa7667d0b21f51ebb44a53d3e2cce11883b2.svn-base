<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <appender name="ErrorAppender" type="log4net.Appender.RollingFileAppender" >
      <!--定义文件存放位置-->
      <param name="File" value="Logs/ErrorLog.log" />
      <!--是否追加到文件-->
      <param name="AppendToFile" value="true" />
      <!--变换的形式为日期-->
      <param name="RollingStyle" value="Date" />
      <!--日期的格式-->
      <param name="DatePattern" value="yyyyMMdd HH:mm:ss" />
      <!--以日志文件大小变换文件名-->
      <param name="RollingStyle" value="Size" />
      <!--最大变换数量，-1为不限制-->
      <param name="MaxSizeRollBackups" value="-1" />
      <!--最大文件大小(1G切换)-->
      <param name="MaximumFileSize" value="2MB" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d %p %n - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <appender name="InfoAppender" type="log4net.Appender.RollingFileAppender" >
      <!--定义文件存放位置-->
      <param name="File" value="Logs/InfoLog.log" />
      <!--是否追加到文件-->
      <param name="AppendToFile" value="true" />
      <!--变换的形式为日期-->
      <param name="RollingStyle" value="Date" />
      <!--日期的格式-->
      <param name="DatePattern" value="yyyyMMdd HH:mm:ss" />
      <!--以日志文件大小变换文件名-->
      <param name="RollingStyle" value="Size" />
      <!--最大变换数量，-1为不限制-->
      <param name="MaxSizeRollBackups" value="-1" />
      <!--最大文件大小后切换-->
      <param name="MaximumFileSize" value="2MB" />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d %p %n - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="INFO" />
      </filter>
    </appender>
    <root>
      <appender-ref ref="ErrorAppender" />
      <level value="ERROR" />
    </root>
    <logger name="TygaSoft.SysException.Log">
      <appender-ref ref="InfoAppender" />
      <level value="INFO" />
    </logger>
  </log4net>
</configuration>